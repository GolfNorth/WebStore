@model EmployeeViewModel
@{
    ViewData["Title"] = Model.SurName;
}

<div class="container">
    <h1>@Model.FirstName @Model.SurName</h1>

    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Фамилия</th>
            <td>@Model.SurName</td>
        </tr>
        <tr>
            <th>Имя</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Отчество</th>
            <td>@Model.Patronymic</td>
        </tr>
        <tr>
            <th>Возраст</th>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <th>Должность</th>
            <td>@Model.Position</td>
        </tr>
    </table>
</div>