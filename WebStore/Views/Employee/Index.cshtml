@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Сотрудники";
}

<div class="container">
    <h1>Сотрудники</h1>

    <table class="table">
        <tr>
            <th>#</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th></th>
        </tr>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.FirstName</td>
                <td>@employee.SurName</td>
                <td>@employee.Patronymic</td>
                <td>
                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">Детали</a>
                </td>
            </tr>
        }
    </table>
</div>