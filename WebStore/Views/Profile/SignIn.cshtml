@model WebStore.Models.SignInViewModel

@{
    ViewData["Title"] = "Авторизация";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="login-form">
                    <!--login form-->
                    <h2>Авторизация</h2>
                    <form method="post" asp-action="SignIn" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />

                        <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            Запомнить
                        </span>
                        <button type="submit" class="btn btn-default">Отправить</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->
