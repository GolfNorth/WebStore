@model ProductViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <h1>@Model.Name</h1>

    <table class="table">
        <tr>
            <th>Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Название</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Описание</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Цена</th>
            <td>@Model.Price</td>
        </tr>
    </table>
</div>
