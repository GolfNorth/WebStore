@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Продукты";
}

<div class="container">
    <h1>Продукты</h1>

    <a asp-action="Edit" class="btn btn-success">Добавить</a>

    <table class="table">
        <tr>
            <th>#</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th></th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>
                    <a asp-action="View" asp-route-id="@product.Id" class="btn btn-success">Детали</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </table>
</div>
