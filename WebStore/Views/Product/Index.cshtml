@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Продукты";
}


<div class="container">
    <h1>Продукты</h1>

    <table class="table">
        <tr>
            <th>#</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th></th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Детали</a>
                </td>
            </tr>
        }
    </table>
</div>
