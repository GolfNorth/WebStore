@using WebStore.Interfaces.Services
@using WebStore.Domain.Entities
@using AutoMapper
@using WebStore.Domain.ViewModels
@{
    ViewData["Title"] = "Главная";
}

@inject IProductService ProductService;
@inject IMapper Mapper;

<partial name="Partial/_Slider"/>
<section>
    <div class="container">
        <div class="row">
            <partial name="Partial/_LeftSidebar"/>
            <div class="col-sm-9 padding-right">
                <partial name="Partial/_FeaturedItems" model="ProductService.GetProducts(new ProductFilter { Page = 1, PageSize = 10}).Products.Select(@Mapper.Map<ProductViewModel>)" />
                <partial name="Partial/_CategoryTab"/>
                <partial name="Partial/_RecommendedItems"/>
            </div>
        </div>
    </div>
</section>