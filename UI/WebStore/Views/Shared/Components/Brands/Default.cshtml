@model IEnumerable<WebStore.Domain.ViewModels.BrandViewModel>

<div class="brands_products">
    <!--brands_products-->
    <h2>Бренд</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var brand in Model)
            {
                <li>
                    <a asp-controller="Catalog" asp-action="Index" asp-route-brandId="@brand.Id">
                        <span class="pull-right">(@ViewData["ProductsByBrand" + brand.Id])</span>@brand.Name</a>
                </li>
            }
        </ul>
    </div>
</div><!--/brands_products-->